#!/bin/bash

args="$@"

set -euo pipefail

main() {
    source_at="$(abspath $args)"

    cd "$(dirname $0)/.."

    build

    if [[ -d $source_at ]]; then
        dir="$(dirname $source_at)"
        file=""
    else
        dir="$(dirname $source_at)"
        file="$(basename $source_at)"
    fi

    docker run \
           --rm \
           -v "$dir:/opt/src" \
           prettier-ruby prettier "/opt/src/$file"
}

build() {
    if [[ "$(docker images -q prettier-ruby | wc -l) " == "0" ]]; then

        docker build . \
               --build-arg USER_ID=$(id -u) \
               --build-arg GROUP_ID=$(id -g) \
               -t prettier-ruby

    fi

}

# From https://stackoverflow.com/questions/3915040/bash-fish-command-to-print-absolute-path-to-a-file
abspath() {
    # $1 : relative filename
    filename=$1
    parentdir=$(dirname "${filename}")

    if [ -d "${filename}" ]; then
        echo "$(cd "${filename}" && pwd)"
    elif [ -d "${parentdir}" ]; then
        echo "$(cd "${parentdir}" && pwd)/$(basename "${filename}")"
    fi
}

main
